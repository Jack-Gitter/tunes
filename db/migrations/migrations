CREATE TABLE USERS
(
    bio character varying(255),
    userrole character varying(255),
    spotifyid character varying(255) primary key,
    username character varying(255) 
)



CREATE TABLE posts (
	albumArtURI varchar(255),
	albumID varchar(255),
	albumName varchar(255),
	createdAt timestamp with time zone,
	rating int,
	songID varchar(255),
	songName varchar(255),
	review varchar(255),
	updatedAt timestamp with time zone,
	posterSpotifyID varchar(255) references users(spotifyid)
)

CREATE TABLE FOLLOWERS (
	follower varchar(255) references users(spotifyid),
	userFollowed varchar(255) references users(spotifyid),
	primary key(follower, userFollowed)
)
